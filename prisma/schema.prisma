generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  excerpt   String
  content   String   @db.Text
  image     String
  category  String
  createdAt DateTime @default(now())
}

model Documentation {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  excerpt     String
  content     String   @db.Text
  coverImage  String
  createdAt   DateTime @default(now())

  images DocumentationImage[]
}

model DocumentationImage {
  id               Int  @id @default(autoincrement())
  imageUrl         String
  documentationId  Int
  documentation    Documentation @relation(fields: [documentationId], references: [id], onDelete: Cascade)
}

